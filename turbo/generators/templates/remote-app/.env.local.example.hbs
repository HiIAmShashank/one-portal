# OnePortal {{ displayName }} - Environment Variables
# Copy this file to .env.local and fill in your Azure AD values
# NEVER commit .env.local to source control!

# Azure AD Application Registration
# Get these values from your Azure AD app registration
VITE_AZURE_CLIENT_ID=your-azure-app-client-id-here
VITE_AZURE_TENANT_ID=your-azure-tenant-id-here

# Authentication Endpoints
# Development (standalone mode)
VITE_AZURE_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_AZURE_POST_LOGOUT_REDIRECT_URI=http://localhost:5173/

# Production values (configured in Azure Static Web Apps)
# VITE_AZURE_REDIRECT_URI=https://your-domain.com/apps/{{ appName }}/auth/callback
# VITE_AZURE_POST_LOGOUT_REDIRECT_URI=https://your-domain.com/apps/{{ appName }}/

# Authentication Scopes (space-separated)
# Default scopes for Microsoft Graph API
VITE_AUTH_SCOPES=openid profile email User.Read

# Application Configuration
# Telemetry/logging identifier
VITE_APP_NAME=AR-OP-UAT-REMOTE-{{ constantCase appName }}

# Optional: API Endpoints
# VITE_API_BASE_URL=https://api.your-domain.com
# VITE_API_TIMEOUT=30000

# Optional: Feature Flags
# VITE_FEATURE_ANALYTICS=true
# VITE_FEATURE_DEBUG_MODE=false

# Optional: Environment Indicator
# VITE_ENVIRONMENT=development
